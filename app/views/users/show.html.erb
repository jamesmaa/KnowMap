<%= render :partial => "application/flash", :locals => { :flash => flash } %>

<p>
  <b>First:</b>
  <%= @user.first %>
</p>

<p>
  <b>Last:</b>
  <%= @user.last %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Help improve <%= Rails.configuration.website_name %>:</b>
  <%= @user.track %>
</p>

<% if false and can?(:view_detailed_profile, @user) %>
<p>
  <b>Role:</b>
  <%= @user.role %>
</p>

<h2>Recent actions</h2>
<table>
  <tr>
    <th>Date</th>
    <th>Action</th>
  </tr>
  <%= render @user.actions %>
</table>
<% end %>

<%= link_to 'Edit', edit_account_path, :remote => remote? %> |
<%= link_to 'Change Password', change_password_path, :remote => remote? %><!-- |
<%= link_to 'View Profile', profile_path, :remote => remote? %>-->
