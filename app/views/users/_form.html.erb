<%= form_for @user, :remote => remote? do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :first %><br />
    <%= f.text_field :first %>
  </p>
  <p>
    <%= f.label :last %><br />
    <%= f.text_field :last %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <% if can?(:change_role, User) %>
  <p>
    <%= f.label :role %><br />
    <%= f.text_field :role %>
  </p>
  <% end %>
  <p>
    <%= f.label "Help improve #{Rails.configuration.website_name}" %><br />
    <%= f.check_box :track %> Yes, allow <%= Rails.configuration.website_name %> to collect my usage information.
  </p>
  
  <p class="button"><%= f.submit @user.new_record? ? "Sign up" : "Update User" %></p>
<% end %>
